# TalkAR Environment Variables (Example)
# Copy this file to `.env` and fill in the secrets. Never commit real values.

# Postgres
POSTGRES_DB=talkar_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-strong

# Supabase (Local Dev)
SUPABASE_POSTGRES_DB=postgres
SUPABASE_POSTGRES_USER=postgres
SUPABASE_POSTGRES_PASSWORD=change-me-strong
SUPABASE_JWT_SECRET=change-me-super-strong-at-least-32-chars

# WARNING: Supabase secret keys (anon, service_role) must ONLY be used in backend/server code.
# Never expose these keys in frontend, mobile, or client-side code.
# If you use Supabase in the frontend, use only the anon key and restrict its permissions in Supabase Dashboard.
# service_role key is highly privilegedâ€”never expose to clients.
# Note: Generate fresh keys for local dev or use Supabase CLI for local setup
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Backend
NODE_ENV=development
DB_HOST=postgres
DB_PORT=5432
DB_NAME=talkar_db
DB_USER=postgres
DB_PASSWORD=change-me-strong
JWT_SECRET=change-me-super-strong-at-least-32-chars
SUPABASE_URL=http://supabase:8000
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=talkar-assets
SYNC_API_URL=https://api.sync.com/v1
SYNC_API_KEY=
CORS_ORIGIN=http://localhost:3001

# Admin Dashboard
REACT_APP_API_URL=http://localhost:3000/api/v1
REACT_APP_SUPABASE_URL=http://localhost:8000
REACT_APP_SUPABASE_ANON_KEY=

# Supabase Studio
STUDIO_PG_META_URL=http://supabase:8000
